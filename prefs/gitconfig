[core]
    excludesfile = /home/username/.gitignore
    autocrlf = input
    pager = less
[user]
    name = yourname
    email = someone@email.com
[credential]
    helper = osxkeychain
    # helper = cache
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true
    pager = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = green
    changed = yellow
    untracked = cyan
[alias] # most of these are taken from: https://gist.github.com/oli/1637874
    a = !git add . && git status
    au = !git add -u . && git status
    ac = !git add -A . && git commit
    acm = !git commit -am
    ass = !git add -A . && git status
    c = commit
    cm = commit -m
    d = diff --color-words
    dh = diff --color-words head
    l = log --color --graph --pretty=format:'%Cred%h%Creset %C(bold blue)%an%Creset:%C(yellow)%d%Creset %s - %Cgreen(%cr)' --abbrev-commit
    lg = log --graph --all --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s - %C(bold blue)%an%Creset, %C(magenta)%ar%Creset'
    ll = log --stat --abbrev-commit
    merff = merge --ff-only
    news = log -p HEAD@{1}..HEAD@{0}
    noff = merge --no-ff
    pl = pull --ff-only
    pb = pull --rebase
    rfl = log --walk-reflogs # yourbranchnamehere
    rmall = !git rm $(git ls-files -d)
    s = status
    sb = status -sb
    stache = !echo "You probably didnt want those files, anyway..." && echo && git stash $@
    up = !git remote update -p; git merge --ff-only @{u}
    serve = !git daemon --reuseaddr --verbose --base-path=. --export-all ./.git
    alias = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\\t => \\2/' | sort
[rebase]
    autosquash = true
[rerere]
    enabled = true
    autoupdate = true
[github]
    user = yourusername
    token = yourtokenhere
