[user]
    name = yourname
    email = someone@email.com
[core]
    pager = most
    excludesfile = ~/.gitignore
    autocrlf = input
    editor = subl -w
[credential]
    # use `helper = cache` on Ubuntu
    helper = osxkeychain
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true
    pager = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = green
    changed = yellow
    untracked = cyan
[alias] # most of these are taken from: https://gist.github.com/oli/1637874
    a = !git add -a . && git status
    aa = !git add -A . && git status
    c = commit
    cam = commit -am
    cm = commit -m
    co = checkout
    d = diff --color-words
    dh = diff --color-words head
    l = log --color --graph --pretty=format:'%Cred%h%Creset %C(bold blue)%an%Creset:%C(yellow)%d%Creset %s - %Cgreen(%cr)' --abbrev-commit --
    lg = log --graph --all --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s - %C(bold blue)%an%Creset, %C(magenta)%ar%Creset'
    ll = log --stat --abbrev-commit
    merff = merge --ff-only
    news = log -p HEAD@{1}..HEAD@{0}
    noff = merge --no-ff
    pb = pull --rebase
    pl = pull --ff-only
    praise = blame
    restore = checkout --
    rfl = log --walk-reflogs
    rmall = !git rm $(git ls-files -d)
    s = status
    sb = status -sb
    stache = !echo "You probably didn't want those files, anyway..." && echo && git stash $@
    unstage = reset HEAD --
    up = !git remote update -p; git merge --ff-only @{u}
    view = !gitk
    alias = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\\t => \\2/' | sort
[push]
    default = simple
[rebase]
    autosquash = true
[rerere]
    enabled = true
    autoupdate = true
[github]
    user = yourusername
    token = yourtokenhere
