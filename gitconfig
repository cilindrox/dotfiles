[user]
    name = Gaston Festari
    email = cilindrox@gmail.com
    signingkey = DE0F58EB
[core]
    pager = less -+S
    excludesfile = ~/.gitignore
    autocrlf = input
    editor = nvim
[credential]
    helper = osxkeychain
[color]
    ui = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    commit = green bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = "red bold 52"
    newNormal = "green bold"
    newHighlight = "green bold 22"
[color "status"]
    added = green
    changed = yellow
    untracked = cyan
[alias]
    aa = add --all --intent-to-add
    ap = add --patch
    amend = commit --amend --no-edit
    c = commit
    cam = commit -am
    cm = commit -m
    co = checkout
    cob = checkout -b
    d = diff --color-words
    ds = diff --staged
    dh = diff --color-words head
    fix = commit --fixup
    ir = !git rebase -i origin/master
    l = log --graph --all --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s - %C(bold blue)%an%Creset %C(magenta)(%ar)%Creset'
    ll = log --stat --abbrev-commit
    merff = merge --ff-only
    noff = merge --no-ff
    pb = pull --rebase
    pf = push --force-with-lease
    pl = pull --ff-only
    rc = rebase --continue
    rs = rebase --skip
    restore = checkout --
    uncommit = reset --soft HEAD^ # back to last commit, files uncommitted
    unstage = reset HEAD --
    rfl = log --walk-reflogs
    s = status -sb
    squ = commit --squash
    alias = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\\t => \\2/' | sort
[fetch]
    prune = true
[push]
    default = simple
[rebase]
    autosquash = true
[rerere]
    enabled = true
    autoupdate = true
[init]
    templatedir = ~/.git_template
[pull]
    ff = only
[filter "lfs"]
    clean = git lfs clean %f
    smudge = git lfs smudge %f
    required = true
[commit]
    template = ~/.gitmessage
[gpg]
    program = gpg2
[help]
    autocorrect = 1
